{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "declaration": true,
        "target": "es2017",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": false,
        "noFallthroughCasesInSwitch": false,
        "lib": [
            "ES2021"
        ],
        "outDir": "./dist"
    },
    "include": [
        "**/*.ts",
        "node_modules/@types/**/*.d.ts"
    ]
}
